<div>
    <label for="">Title</label>
    <input type="text" name="title" value="<%= movie.title %>">
</div>

<div>
<label for="">Director</label>
    <select name="director" id="">
        <% directors.forEach(director => { %>
            <% if (director.id === movie.director) { %>
                <option selected value="<%= director.id %>"><%= director.name %></option>
            <% } else { %>
                <option value="<%= director.id %>"><%= director.name %></option>
            <% } %>
        <% }) %>
    </select>
</div>

<div>
    <label> Release Date </label>
    <input type="date" name="releaseDate" value="<%= movie.releaseDate == null ? '': movie.releaseDate.toISOString().split('T')[0] %>">
</div>

<div>
    <label> Movie Duration </label>
    <input type="number" min="10" name="movieTime" value="<%= movie.movieTime %>">
</div>

<div>
    <label> Cover </label>
    <input type="file" class="filepond" name="cover">
</div>

<div>
    <label> Synopsis </label>
    <textarea name="synopsis"><%= movie.synopsis %></textarea>
</div>

